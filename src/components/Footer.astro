---
import { ExternalLink } from 'lucide-react'
import { FOOTER } from '../constants'
---

<footer class="mx-auto max-w-fit h-60 space-y-4">
    <p class="text-center text-2xl font-bold whitespace-pre-line">{FOOTER.P}</p>
    <div class="p-6 space-y-2 rounded-2xl bg-theme/50">
        {
            FOOTER.CONTACTS.map((c) => (
                <div class="grid grid-cols-3 tablet:text-lg">
                    <span class="font-bold">{c.label}</span>
                    <div class="col-span-2 flex flex-row gap-3 items-center">
                        <span>{c.value}</span>
                        {c.link && (
                            <a href={c.link} target="_blank" rel="noopener noreferrer" class="pb-1 text-neutral-800">
                                <ExternalLink width="20" height="20" />
                            </a>
                        )}
                    </div>
                </div>
            ))
        }
    </div>
</footer>
