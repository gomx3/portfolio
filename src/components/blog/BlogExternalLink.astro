---
import { ExternalLink } from 'lucide-react'

interface Props {
    link: string
}

const { link } = Astro.props
---

<a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="flex flex-row gap-2 mx-auto px-4 py-2 items-center rounded-xl text-neutral-600 bg-neutral-100 hover:bg-neutral-200 transition-colors duration-300"
    >블로그로 이동하기
    <ExternalLink width="20" height="20" />
</a>
