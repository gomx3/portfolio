---
interface BlogPost {
    title: string
    link: string
    pubDate: string
    thumbnail: string
}

interface Props {
    blog: {
        posts: BlogPost[]
    }
}

const { blog } = Astro.props
---

<div class="grid gap-6 max-w-lg w-full mb-10">
    {
        blog.posts.map((post) => (
            <a href={post.link} target="_blank" rel="noopener noreferrer" class="flex flex-row gap-4 group">
                <div class="flex flex-col gap-2 flex-1">
                    <h3 class="text-xl font-medium text-base-black line-clamp-2">{post.title}</h3>
                    <p class="text-neutral-400">{post.pubDate}</p>
                </div>

                <div class="w-40 h-28 rounded-xl overflow-hidden">
                    <img
                        src={post.thumbnail}
                        alt={post.title}
                        class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-110"
                    />
                </div>
            </a>
        ))
    }
</div>
